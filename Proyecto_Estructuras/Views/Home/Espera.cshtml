                    @Html.DisplayFor(modelItem => item.Fecha)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Hora)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MarcaVacuna)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Dosis)
                </td>
                <td>
                    <a href="@Url.Action("Vacunacion","Home")">Actualizar</a>
                </td>
                <td>
                    <a href="@Url.Action("Reagendar","Home")">Reagendar</a>
                </td>
            </tr>
            }
        </tbody>
    }
</table>